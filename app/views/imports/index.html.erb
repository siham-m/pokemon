<div class="card">
  <div class="card-header"><%= @imports.count %> Imports</div>
  <div class="card-body p-0">
  <table class="table-bordered table-hover table m-0">
    <thead class="small bg-light">
      <tr>
        <th class="p-2"><%= t("created_at") %></th>
        <th class="p-2"><%= t("updated_at") %></th>
        <th class="p-2"><%= t("duration") %></th>
        <th class="p-2">Resource</th>
      </tr>
    </thead>
    <tbody>
        <% @imports.order(id: :desc).each do |import| %>
          <tr>
        <td class="p-2"><%= import.created_at %></td>
        <td class="p-2"><%= import.updated_at %></td>
        <td class="p-2"><%= import.duration %> min</td>
        <td class="p-2"><%= import.resource %> </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
</div>