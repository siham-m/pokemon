<h1>Pokemons#index</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Height</th>
      <th scope="col">Weight</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @pokemons.each do |pokemon| %>
      <th scope="row"><%= pokemon.id %></th>
      <td><%= pokemon.name %></td>
      <td><%= pokemon.height %> cm</td>
      <td><%= pokemon.weight %> kg</td>
      <% end %>
    </tr>
  </tbody>
</table>