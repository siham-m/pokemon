<%= link_to "Export", attacks_path(format: "csv"), class:"btn btn-dark" %>
<div class="card">
<div class="card-header">Attack</div>
<div class="card-body p-0">
<table class="table-bordered table-hover table m-0">
  <thead class="small bg-light">
    <tr>
      <th class="p-2">Name</th>
      <th class="p-2">Accuracy</th>
      <th class="p-2">Power</th>
      <th class="p-2">Show</th>
    </tr>
  </thead>
  <tbody>
      <% @attacks.each do |attack| %>
        <tr>
      <td class="p-2"><%= attack.name.titleize %></td>
      <td class="p-2"><%= attack.accuracy %> cm</td>
      <td class="p-2"><%= attack.power %> kg</td>
      <td class="p-2"><%= link_to "show", attack_path(attack.name), class: "btn btn-secondary btn-sm" %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
